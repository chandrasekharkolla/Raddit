<!DOCTYPE html>
<html>
<head>
  <title>Raddit</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<% flash.each do |i,j| %>
		<%= content_tag(:div, j, class: "alert alert-#{i}") %>
	<% end %>
<%= yield %>

</body>
</html>
